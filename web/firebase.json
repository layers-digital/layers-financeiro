{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/related",
        "function": "related"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ {
      "source" : "**/*.@(eot|otf|ttf|ttc|woff2|woff|font.css)",
      "headers" : [ {
        "key" : "Access-Control-Allow-Origin",
        "value" : "*"
      }, {
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      } ]
    }, {
      "source" : "**/*.@(js|css)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      } ]
    }, {
      "source" : "**/*.@(jpg|jpeg|gif|png|svg|webp)",
      "headers" : [ {
        "key" : "Cache-Control",
        "value" : "max-age=2592000"
      } ]
    }]
  }
}