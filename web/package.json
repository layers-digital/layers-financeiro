{
  "name": "layers-financeiro",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "start": "vue-cli-service serve",
    "build": "vue-cli-service build && yarn archive",
    "lint": "eslint src --ext=.ts,.js,.vue",
    "build-report": "vue-cli-service build --report",
    "archive": "ARCHIVE_URL=${ARCHIVE_URL:=https://layers-financeiro-staging.web.app}; webarchiver generate $ARCHIVE_URL ./dist/index.html ./dist/portal.webarchive"
  },
  "dependencies": {
    "@tenda.digital/webarchiver": "^1.1.4",
    "axios": "^0.19.2",
    "dayjs": "^1.8.27",
    "dompurify": "^2.0.10",
    "firebase": "^7.15.0",
    "layers-portal-sdk": "^1.0.5",
    "marked": "^1.0.0",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "vuex": "^3.1.3",
    "vuex-persistedstate": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "~4.3.0",
    "@vue/cli-plugin-router": "~4.3.0",
    "@vue/cli-plugin-vuex": "~4.3.0",
    "@vue/cli-service": "~4.3.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "hard-source-webpack-plugin": "^0.13.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "prettier": "^2.1.2",
    "vue-template-compiler": "^2.6.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "yarn run lint --fix"
    ]
  }
}
